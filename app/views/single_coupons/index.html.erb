<div class="container mt-5">

  <p> <%= link_to 'Voltar', root_path, class: 'my-5' %> </p>

  <div>
    <%= link_to 'Novo cupom avulso', new_single_coupon_path, class: 'btn btn-outline-primary' %>
  </div>

  <h1 class="my-3 text-center"> Cupons dispon√≠veis</h1>
  <div class="row">
    <% @coupons.each do |coupon| %>
      <div class="col-md-4 col-sm-12 mb-3">
        <div class="card">
          <div class="card-header font-weight-bold" >
            <%= link_to coupon.token, coupon %>
