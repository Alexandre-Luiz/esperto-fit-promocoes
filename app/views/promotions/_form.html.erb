<%= form_with model: promotion, local: true do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :token %>
    <%= f.text_field :token, min:6, max:10, placeholder: 'De 6 a 10 caracteres' %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :discount_rate %>
    <%= f.number_field :discount_rate, min: 0.1, max: 100, step: 0.1 %>
  </div>
  <div>
    <%= f.label :monthly_duration %>
    <%= f.number_field :monthly_duration, min: 1 %>
  </div>
  <div>
    <%= f.label :coupon_quantity %>
    <%= f.number_field :coupon_quantity %>
  </div>
  <div>
    <%= f.label :expire_date %>
    <%= f.date_field :expire_date %>
  </div>
  <div>
    <%= f.submit 'Enviar' %>
  </div>
<% end %>