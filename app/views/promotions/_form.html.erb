<div class="container mt-5">
  <ul>
    <% @promotion.errors.full_messages.each do |message| %>
      <b><li><%= message %></li></b>
    <%end%>
  </ul>

  <%= form_with model: promotion, local: true do |f| %>
    <div class='col-xl-4'>
      <div class='form-group'>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class='form-group'>
        <%= f.label :token %>
        <%= f.text_field :token, min:6, max:10, placeholder: 'De 6 a 10 caracteres', class: 'form-control' %>
      </div>
      <div class='form-group'>
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
      <div class='form-group'>
        <%= f.label :discount_rate %>
        <%= f.number_field :discount_rate, min: 0.1, max: 100, step: 0.1, class: 'form-control' %>
      </div>
      <div class='form-group'>
        <%= f.label :monthly_duration %>
        <%= f.number_field :monthly_duration, min: 1, class: 'form-control' %>
      </div>
      <div class='form-group'>
        <%= f.label :coupon_quantity %>
        <%= f.number_field :coupon_quantity, class: 'form-control' %>
      </div>
      <div class='form-group'>
        <%= f.label :expire_date %>
        <%= f.date_field :expire_date, class: 'form-control' %>
      </div>
      <div>
        <%= f.submit 'Enviar' %>
      </div>
    </div>
  <% end %>

</div>
