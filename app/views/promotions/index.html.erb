<div class="text-center">
  <%= link_to 'Cadastrar promoção', new_promotion_path, :class => "btn btn-outline-dark btn-lg" %>
</div>

<% @promotions.each do |promotion| %>
<div>
  <ul>
    <li> <%= link_to promotion.name, promotion %> </li>
    <ul>
      <li> Desconto: <%= promotion.discount_rate%> </li>
      <li> Expira dia <%=promotion.expire_date%> </li>
    </ul>
  </ul>
<% end %>

<div>
  <%= link_to 'Voltar', root_path %>
</div>